<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    >

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registre o seu Evento!"
        android:textSize="24sp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/nome"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Nome do Evento"
        />
    <TextView
        android:id="@+id/de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DE"
        android:typeface="sans"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/dataI"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Data incial"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        />
    <EditText
        android:id="@+id/edit_horarioI"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="HorárioI"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/ate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATÉ"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/edit_dataF"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Data final"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/edit_horarioF"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="HorárioF"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        />

    <Button
        android:id="@+id/botao"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Próximo passo"
        android:onClick="mandar"
        />




</LinearLayout>
